<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_margin="@dimen/eight"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/three"
    app:cardElevation="@dimen/three"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Title"
                android:maxLines="3"
                android:ellipsize="end"
                android:id="@+id/blog_headline"
                android:text="This is blog requestkjbscjhcbvhsdvbjhvsjhdvj"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginTop="@dimen/fifteen"
                android:id="@+id/blog_date"
                android:text="Tuesday 12 2000"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/two_fifty"
            android:scaleType="center"
            android:layout_height="120dp"
            android:src="@drawable/image_22"
            android:id="@+id/blog_image"
            android:layout_weight="1"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>